#!/usr/bin/env python
#
# import-datafile
#

import sys


def arg_parser():
    from argparse import ArgumentParser
    parser = ArgumentParser()
    parser.add_argument("data_file", metavar='data-file', help="root data file")
    return parser


def main(argv=None):
    if argv is None:
        argv = sys.argv[1:]
    args = arg_parser().parse_args(argv)

    from ROOT import TFile
    data_file = TFile.Open(args.data_file)
    if not data_file:
        print("Could not open file %r" % args.data_file, file=sys.stderr)
        return 1
    
   
    return 0


if __name__ == "__main__":
    sys.exit(main())

